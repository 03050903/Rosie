<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toolbar_gradient"
    app:contentInsetLeft="@dimen/toolbar_back_button_left_margin"
    app:contentInsetStart="@dimen/toolbar_back_button_left_margin"
    >

  <ImageView
      android:id="@+id/iv_toolbar_back"
      android:layout_width="@dimen/toolbar_back_button_size"
      android:layout_height="@dimen/toolbar_back_button_size"
      android:background="@drawable/ic_chevron_left_white_48dp"
      android:contentDescription="@string/back_button_content_description"
      />

  <TextView
      android:id="@+id/tv_toolbar_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/toolbar_title_margin_right"
      android:layout_marginEnd="@dimen/toolbar_title_margin_right"
      style="@style/ToolbarTitle"
      tools:text="SPIDERMAN SOMETHING SOMETHING"
      />

</android.support.v7.widget.Toolbar>