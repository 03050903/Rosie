<resources>

  <style name="SampleTheme"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="vpiTabPageIndicatorStyle">@style/ViewPagerTabIndicator</item>
  </style>

  <style name="SampleTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="ViewPagerTabIndicator"
      parent="Widget.TabPageIndicator">
    <item name="android:background">@drawable/view_pager_tab_background</item>
    <item name="android:textAppearance">@style/ViewPagerTabIndicator.Text</item>
  </style>

  <style name="ViewPagerTabIndicator.Text"
      parent="TextAppearance.TabPageIndicator">
    <item name="android:textColor">@color/view_pager_tab_text</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="LoadingText">
    <item name="android:textSize">@dimen/loading_font_size</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="CharacterName">
    <item name="android:textSize">@dimen/character_name_font_size</item>
    <item name="android:textColor">@color/character_name</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:layout_marginLeft">@dimen/character_margin_left</item>
  </style>

  <style name="ComicName">
    <item name="android:textSize">@dimen/comic_name_font_size</item>
    <item name="android:textColor">@color/comic_name</item>
    <item name="android:layout_marginLeft">@dimen/comic_margin_left</item>
  </style>

  <style name="ComicDescription">
    <item name="android:textSize">@dimen/comic_description_text_size</item>
    <item name="android:textColor">@color/comic_details_description</item>
  </style>

</resources>
